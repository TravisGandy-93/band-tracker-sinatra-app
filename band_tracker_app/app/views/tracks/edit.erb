<h2>Edit
    <%=@track.name%>
</h2>

<form action="/tracks/<%= @track.slug %>/edit" method="POST">
    <input type="hidden" name="_method" value="PATCH">

    <h3>
        <label>New name</label>
    </h3>
    <input type="text" name="track[name]" value="<%=@track.name%>">
    <br>
    <h3>
        <label>New band</label>
    </h3>
    <input type="text" name="track[band]" value="<%=@track.band.name%>">

    <input type="submit" value="submit">
</form>